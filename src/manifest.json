{
  "name": "Smart Digest - AI Page Summarizer",
  "description": "Summarize any web page with AI. Get key insights, analysis, and definitions directly from your browser's side panel.",
  "version": "1.1.0.94",
  "manifest_version": 3,
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage",
    "commands",
    "tts"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/serviceWorker.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content-script.js"
      ],
      "type": "module"
    }
  ],
  "action": {
    "default_title": "Open Smart Digest"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Open Smart Digest"
    }
  }
}